{
  "private": true,
  "name": "@access/task",
  "version": "1.0.0",
  "description": "Access tasks from a data source",
  "exports": {
    ".": "./build/index.js",
    "./": "./build/"
  },
  "scripts": {
    "clean": "rimraf -rf ./build tsconfig.tsbuildinfo",
    "build": "tsc",
    "rebuild": "yarn run clean && yarn run build",
    "watch": "tsc -w",
    "test": "jest --watch",
    "test:ci": "jest --watchAll=false --ci",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "prettier": "@config/prettier",
  "dependencies": {
    "@access/common": "*",
    "@utility/common": "*",
    "fp-ts": "^2.10.5"
  },
  "devDependencies": {
    "@config/prettier": "*",
    "@types/jest": "^26.0.23",
    "jest": "26.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "26.5.6",
    "typescript": "^4.3.4"
  }
}
