{
  "private": true,
  "name": "@utility/common",
  "version": "1.0.0",
  "description": "Common utilities used for both front and backend",
  "exports": {
    ".": "./build/index.js",
    "./": "./build/"
  },
  "scripts": {
    "clean": "rimraf -rf ./build tsconfig.tsbuildinfo",
    "build": "tsc",
    "rebuild": "yarn run clean && yarn run build",
    "watch": "tsc -w",
    "test": "jest",
    "test:all": "yarn test --watchAll=false --ci",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
