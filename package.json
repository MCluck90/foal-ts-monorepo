{
  "name": "foal-react-app-example",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "client",
      "server"
    ],
    "nohoist": [
      "**/@types/jest",
      "**/@types/mocha",
      "**/@types/testing-library__jest-dom",
      "**/module-alias",
      "**/typeorm",
      "**/typeorm/**"
    ]
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prepush-if-changed": "^1.0.8",
    "prettier": "^2.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,html}": "prettier --write"
  },
  "prepush-if-changed": {
    "client/**/*": "cd client && yarn test:all",
    "server/**/*": "cd server && yarn test:all"
  }
}
