{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "~/*": ["./src/*"],
      "@config/prettier/*": ["../../.config/prettier/src/*"],
      "@config/prettier": ["../../.config/prettier/src"],
      "@access/task": ["../../access/task/src"],
      "@access/task/*": ["../../access/task/src/*"],
      "@utility/common": ["../../utility/common/src"],
      "@utility/common/*": ["../../utility/common/src/*"],
      "@engine/validation": ["../../engine/validation/src"],
      "@engine/validation/*": ["../../engine/validation/src/*"],
      "@access/common": ["../../access/common/src"],
      "@access/common/*": ["../../access/common/src/*"]
    }
  },
  "include": ["types/*", "src/**/*", "test/**/*"],
  "references": [
    {
      "path": "../../.config/prettier"
    },
    {
      "path": "../../access/common"
    },
    {
      "path": "../../access/task"
    },
    {
      "path": "../../engine/validation"
    },
    {
      "path": "../../utility/common"
    }
  ]
}
