{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "~/*": ["./src/*"],
      "@config/prettier/*": ["../../.config/prettier/src/*"],
      "@config/prettier": ["../../.config/prettier/src"],
      "@config/eslint-config": ["../../.config/eslint/src"],
      "@config/eslint-config/*": ["../../.config/eslint/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../.config/eslint"
    },
    {
      "path": "../../.config/prettier"
    }
  ]
}
