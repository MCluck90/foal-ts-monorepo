{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": ".",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "~/*": ["./src/*"],
      "@config/prettier/*": ["../../.config/prettier/src/*"],
      "@config/prettier": ["../../.config/prettier/src"]
    }
  },
  "include": ["types/*", "src/**/*"],
  "references": [
    {
      "path": "../../.config/prettier"
    }
  ]
}
